{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/sign-in",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "authentication_service", // Sử dụng tên của container
          "Port": 8080 // Cổng dịch vụ của authentication_service trong Docker
        }
      ],
      "UpstreamPathTemplate": "/api/sign-in",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/sign-up",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "authentication_service", // Sử dụng tên của container
          "Port": 8080 // Cổng dịch vụ của authentication_service trong Docker
        }
      ],
      "UpstreamPathTemplate": "/api/sign-up",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/confirm-email",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "authentication_service", // Sử dụng tên của container
          "Port": 8080 // Cổng dịch vụ của authentication_service trong Docker
        }
      ],
      "UpstreamPathTemplate": "/api/confirm-email",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/again-sent-email",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "authentication_service", // Sử dụng tên của container
          "Port": 8080 // Cổng dịch vụ của authentication_service trong Docker
        }
      ],
      "UpstreamPathTemplate": "/api/again-sent-email",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/Customer/GetAllCustomers",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "profile_service", // Sử dụng tên của container
          "Port": 8084 // Cổng dịch vụ của profile_service trong Docker
        }
      ],
      "UpstreamPathTemplate": "/customer/GetAllCustomers",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ]
    },
    { // service chat getconversations
      "DownstreamPathTemplate": "/api/Chat/GetConversation",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "chat_service", // Sử dụng tên của container
          "Port": 8083 // Cổng dịch vụ của chat_service trong Docker
        }
      ],
      "UpstreamPathTemplate": "/api/Chat/GetConversation",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000" // Cổng của API Gateway trong Docker
  }
}




